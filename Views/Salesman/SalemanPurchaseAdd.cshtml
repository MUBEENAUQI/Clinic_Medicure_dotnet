@model Clinic_Automation.Models.OrderModel


@{
    ViewBag.Title = "Purchase order";
    Layout = "~/Views/Salesman/_Layout.cshtml";
}

<style>
    .flex-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-inline-end: 1.5em
    }

    .divspace {
        padding-top: .3em
    }
</style>

<div class="flex-container">
    <h2>Enter Your Purchase order</h2>
    

</div>

<div>
    @using (Html.BeginForm("orderAdd", "Salesman", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Medicine ID</label>
                @Html.TextBoxFor(a => a.medicineID, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.medicineID, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Quantity</label>
                @Html.TextBoxFor(a => a.quantity, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.quantity, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="row divspace" style="margin-top: 2em; margin-bottom: 11em; display: flex; ">
            <div class="col-md-2" >
                <input type="submit" value="Order Product" class="btn btn-danger" />
            </div>
            @*<div class="col-md-2" style="padding-left: 10px;">
                <a href="@Url.Action("OrderNewProduct", "Salesman")" class="btn btn-success">Add new</a>
            </div>*@
        </div>




        <div class="row divspace">
            <div class="col-md-12">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>

    }
</div>
