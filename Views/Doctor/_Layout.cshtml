<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <style>

        .header {
            margin-top: 0;
            height: 3em;
            margin-bottom: 2em;
            justify-content: center;
            padding-left: 3em;
            padding-inline: 3em;
            padding-top: 1em;
            padding-bottom: 1em;
        }

        .footerDesign {
            text-align: center;
            padding: 10px;
            background-color: #f2f2f2;
        }

        .sidebar {
            width: 200px;
            background-color: #f8f9fa;
            padding: 1em;
        }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
            }

            .sidebar li {
                margin-bottom: 0.5em;
            }

            .sidebar a {
                color: #000000;
                text-decoration: none;
            }

                .sidebar a:hover {
                    color: #0b8fac;
                }
    </style>
</head>
<body>

    <div class="header">

        <img src="~/Assets/Medicare_logo.jpeg" height="50" alt="">

    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">

                        <h3>Doctor's Actions</h3>

                    </li>
                    <li class="nav-item">

                        @Html.ActionLink("Patient Details", "PatientList", "Patient", new { area = "" }, new { @class = "navbar-brand" })

                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Place Order", "DisplayOrder", "OrderPlaceDoctor", new { area = "" }, new { @class = "navbar-brand" })

                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Compose Message", "ComposeMessage", "ComposeMsg", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("View Message", "DisplayMsg", "ComposeMsg", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <footer class="footerDesign">
            <p>© 2023 MediCare Clinic. All rights reserved.</p>
        </footer>
    </div>
</body>
</html>