@model Clinic_Automation.Models.MedicineModel
@{
    ViewBag.Title = "AddNewMedicine";
    Layout = "~/Views/Doctor/_Layout.cshtml";
}

<h2>Add New Medicine</h2>

@using (Html.BeginForm("AddMedicine", "Doctor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row divspace">
        <div class="col-md-6">
            <label style="padding-bottom: 12px;">Name</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            <label style="padding-bottom: 12px;">Manufacturer</label>
            @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Manufacturer, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row divspace">
        <div class="col-md-6">
            <label style="padding-bottom: 12px;">Dosage</label>
            @Html.TextBoxFor(m => m.Dosage, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Dosage, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            <label style="padding-bottom: 12px;">Description</label>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row divspace">
        <div class="col-md-6">
            <label style="padding-bottom: 12px;">Expiry Date</label>
            @Html.TextBoxFor(m => m.ExpiryDate, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.ExpiryDate, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            <label style="padding-bottom: 12px;">Price</label>
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01" })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row divspace">
        <div class="col-md-6">
            <label style="padding-bottom: 12px;">Quantity</label>
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row divspace" style="margin-top:3em">
        <div class="col-md-12">
            <input type="submit" value="Save" class="btn btn-outline-success" />
        </div>
    </div>

    <div class="row divspace">
        <div class="col-md-12">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
}
