@model Clinic_Automation.Models.DoctorModel

@{
    ViewBag.Title = "DoctorProfile";
    Layout = "~/Views/Doctor/_Layout.cshtml";
}


<style>
    .profile-container {
        display: grid;
        grid-template-columns: auto 1fr 1fr;
        gap: 20px;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-image img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
    }

    .profile-details {
        display: flex;
        flex-direction: column;
    }

    .login-details {
        display: flex;
        flex-direction: column;
    }

    h2 {
        margin-bottom: 20px;
    }

    h3 {
        margin-bottom: 10px;
    }

    strong {
        color: #0b8fac;
    }

    p {
        color: #333;
        margin: 0;
    }

    /* Add any additional styling as needed */
</style>

<h2>Your Profile</h2>

<div class="profile-container">
    <div class="profile-image">
        @if (Model.Doctor_Gender == "Female")
        {
            <img src="@Url.Content("~/Assets/z")" alt="Doctor Avatar">
        }
        else
        {
            <img src="@Url.Content("~/Assets/MaleDoc.jpg")" alt="Doctor Avatar">
        }
    </div>
    <div class="profile-details" style="margin-left: 2em;">
        <h3>Personal Information</h3>
        <p><strong>Doctor ID:</strong> @Model.Doctor_id</p>
        <p><strong>Name:</strong> @Model.Doctor_name</p>
        <p><strong>Specialty:</strong> @Model.Doctor_Specialty</p>
        <p><strong>Experience:</strong> @Model.Doctor_Experience</p>
        <p><strong>Phone:</strong> @Model.Doctor_Phone</p>
        <p><strong>Email:</strong> @Model.Doctor_Email</p>
        <p><strong>Qualification:</strong> @Model.Doctor_Qualification</p>
        <p><strong>Fees:</strong> @Model.Doctor_Fees</p>
        <p><strong>Gender:</strong> @Model.Doctor_Gender</p>
    </div>
    <div class="login-details" style="margin-left: 2em;">
        <h3>Login Information</h3>
        <p><strong>Login ID:</strong> @Model.Login_id</p>
        <p><strong>Username:</strong> @Model.Doctor_Username</p>
        <p><strong>Password:</strong> @Model.Doctor_Password</p>
    </div>
</div>
<div style="height: 10em;"></div>
