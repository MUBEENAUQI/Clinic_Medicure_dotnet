@model Clinic_Automation.Models.Patient1
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}
@{
    ViewBag.Title = "AdminPatientView";
}


<style>
    .flex-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-inline-end: 1.5em
    }

    .divspace {
        padding-top: .3em
    }
</style>

<div class="flex-container">
    <h2>Add Doctor Details</h2>
    <div>
        <a href="@Url.Action("Patient", "Admin")" class="btn btn-success">View Patients</a>
    </div>

</div>

<div>
    @using (Html.BeginForm("SavePatient", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(a => a.Patient_Id)
        @Html.HiddenFor(a => a.Login_id)
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Name</label>
                @Html.TextBoxFor(a => a.Patient_Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Email</label>
                @Html.TextBoxFor(a => a.Patient_Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Date of birth</label>
                @Html.TextBoxFor(a => a.Patient_Birthday, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Birthday, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Phone Number</label>
                @Html.TextBoxFor(a => a.Patient_Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Phone, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Blood Group</label>
                @Html.TextBoxFor(a => a.Patient_Bloodgrp, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Bloodgrp, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Address</label>
                @Html.TextBoxFor(a => a.Patient_Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Address, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Height</label>
                @Html.TextBoxFor(a => a.Patient_Height, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Height, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Weight</label>
                @Html.TextBoxFor(a => a.Patient_Weight, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Weight, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Username</label>
                @Html.TextBoxFor(a => a.Patient_Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Username, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Password</label>
                @Html.TextBoxFor(a => a.Patient_Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Gender</label>
                <div>
                    Male: @Html.RadioButtonFor(a => a.Patient_gender, "Male")
                    Female: @Html.RadioButtonFor(a => a.Patient_gender, "Female")
                </div>
                @Html.ValidationMessageFor(a => a.Patient_gender, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Prescription</label>
                @Html.TextBoxFor(a => a.Patient_Prescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Patient_Prescription, "", new { @class = "text-danger" })
            </div>
        </div>








        <div class="row divspace">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </div>

        <div class="row divspace">
            <div class="col-md-12">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>

    }
</div>
