@model Clinic_Automation.Models.DoctorModel
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}
@{
    ViewBag.Title = "AdminDoctorAdd";
}


<style>
    .flex-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-inline-end: 1.5em
    }
    .divspace{
        padding-top:.3em
       
    }
</style>

<div class="flex-container">
    <h2>Add Doctor Details</h2>
    <div>
        <a href="@Url.Action("Doctor", "Admin")" class="btn btn-success">View Doctors</a>
    </div>

</div>

<div>
    @using (Html.BeginForm("SaveDoctor", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(a => a.Doctor_id)
        @Html.HiddenFor(a => a.Login_id)
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Name</label>
                @Html.TextBoxFor(a => a.Doctor_name, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Doctor_name, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Specialty</label>
                @Html.TextBoxFor(a => a.Doctor_Specialty, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Doctor_Specialty, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Experience</label>
                @Html.TextBoxFor(a => a.Doctor_Experience, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Doctor_Experience, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Qualification</label>
                @Html.TextBoxFor(a => a.Doctor_Qualification, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Doctor_Qualification, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Phone</label>
                @Html.TextBoxFor(a => a.Doctor_Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Doctor_Phone, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Email</label>
                @Html.TextBoxFor(a => a.Doctor_Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Doctor_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Username</label>
                @Html.TextBoxFor(a => a.Doctor_Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Doctor_Username, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Password</label>
                @Html.TextBoxFor(a => a.Doctor_Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Doctor_Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row divspace">
            <div class="col-md-6">
                <label style="padding-bottom:12px">Gender</label>
                <div>
                    Male: @Html.RadioButtonFor(a => a.Doctor_Gender, "Male")
                    Female: @Html.RadioButtonFor(a => a.Doctor_Gender, "Female")
                </div>
                @Html.ValidationMessageFor(a => a.Doctor_Gender, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-6">
                <label style="padding-bottom:12px">Fees</label>
                @Html.TextBoxFor(a => a.Doctor_Fees, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Doctor_Fees, "", new { @class = "text-danger" })
            </div>
        </div>








        <div class="row divspace">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </div>

        <div class="row divspace">
            <div class="col-md-12">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>

    }
</div>
